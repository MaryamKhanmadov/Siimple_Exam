@model List<Setting>
@{
    int count = 0;
}
<div class="container">
    <h1 style="color:blue"><b>Setting : </b></h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Key</th>
                <th scope="col">Value</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.Key</td>
                    <td>@item.Value</td>
                    <td>
                        <a asp-action="update" asp-controller="card" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
