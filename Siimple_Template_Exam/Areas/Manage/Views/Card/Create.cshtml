@model Card

<div class="container">
    <h1 style="color:blue"><b>Create Card : </b></h1>
    <form method="post" enctype="multipart/form-data" asp-action="create">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Title" >
            <span style="color:red" asp-validation-for="Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Descreption" class="form-label">Descreption</label>
            <textarea asp-for="Descreption" class="form-control" placeholder="Descreption"></textarea>
            <span style="color:red" asp-validation-for="Descreption"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IconUrl" class="form-label">IconUrl</label>
            <input asp-for="IconUrl" class="form-control" placeholder="IconUrl">
            <span style="color:red" asp-validation-for="IconUrl"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label">ImageFile</label>
            <input asp-for="ImageFile" class="form-control" placeholder="ImageFile">
            <span style="color:red" asp-validation-for="ImageFile"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>